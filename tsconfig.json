{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "plugins": [{
      "transform": "typescript-is/lib/transform-inline/transformer"
    }]
  },
  "include": [
    "./src/**/*"
  ]
}